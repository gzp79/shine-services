# Generative AI Tool Environment Configuration
# Copy this file to .env and modify as needed

# Model Configuration
MISTRAL_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2
BLIP_MODEL_NAME=Salesforce/blip2-opt-2.7b
VECTORIZER_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Device Configuration (auto, cpu, cuda, mps)
DEVICE=auto

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/generative_ai.log

# Data Paths
EXAMPLES_DIR=data/examples
RULES_DIR=data/rules
OUTPUTS_DIR=data/outputs
CACHE_DIR=data/cache

# Learning Configuration
SIMILARITY_THRESHOLD=0.8
MAX_EXAMPLES_PER_RULE=100
MIN_CONFIDENCE=0.7 