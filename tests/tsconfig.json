{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "tsBuildInfoFile": "node_modules/.tmp/tsconfig.tsbuildinfo",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,

        "outDir": "build",

        "paths": {
            "$fixtures/*": ["./fixtures/*"],
            "$lib": ["./src"],
            "$lib/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules", "build"]
}
