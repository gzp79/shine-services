{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        "outDir": "build",

        "paths": {
            "@fixtures/*": ["./fixtures/*"],
            "$lib": ["./src"],
            "$lib/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules", "build"]
}
